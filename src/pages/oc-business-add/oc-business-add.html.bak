<ion-header>
	<ion-navbar>
		<button ion-button menuToggle>
			<ion-icon name="menu"></ion-icon>
		</button>
		<ion-title>CA Add Business</ion-title>
	</ion-navbar>
</ion-header>


<ion-content padding>
	
	
	<ion-grid>
		
		<ion-row>
			<ion-col>
				<h5>Enter business details:</h5>
			</ion-col>
		</ion-row>
	
	</ion-grid>
	
	
	
	<div>
	
		<ion-item>
			<ion-label floating>Business Name</ion-label>
			<ion-input type="text" id="business_name" name="business_name" [(ngModel)]="business.businessname"></ion-input>
		</ion-item>
	
		<ion-item>
			<ion-label floating>Business PAN</ion-label>
			<ion-input type="text" id="pan" name="pan" [(ngModel)]="business.pannumber"></ion-input>
		</ion-item>
	
		<ion-grid>
			<ion-row>
				<ion-label>GSTINs</ion-label>
			</ion-row>
			<ion-row *ngFor="let g of business.gstins; let i = index">
				<ion-col>
					<ion-item>
						<ion-label floating>GSTIN</ion-label>
						<ion-input type="text" [(ngModel)]="g.gstin"></ion-input>
					</ion-item>
				</ion-col>
				<ion-col>
					<ion-item>
						<ion-label floating>Display Name</ion-label>
						<ion-input type="text" [(ngModel)]="g.displayname"></ion-input>
					</ion-item>
				</ion-col>
				<ion-col>
					<button (click)="remove_gstin(i)" ion-button color="danger" small style="position: absolute; bottom: 0;">
						Remove
					</button>
				</ion-col>
			</ion-row>
			<ion-row>
				<button (click)="add_gstin()" ion-button color="primary" small>
					Add GSTIN
				</button>
			</ion-row>
		</ion-grid>
		
		<ion-grid>
			<ion-row>
				<ion-col text-right>
					<button (click)="save_business()" ion-button color="secondary">
						Save Business
					</button>
				</ion-col>
			</ion-row>
		</ion-grid>
		
	</div>

</ion-content>
