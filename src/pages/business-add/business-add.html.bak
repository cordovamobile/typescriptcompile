<ion-header>
	<ion-navbar>
		<button ion-button menuToggle>
			<ion-icon name="menu"></ion-icon>
		</button>
		<ion-title>Add New Business</ion-title>
	</ion-navbar>
</ion-header>


<ion-content padding>
	
	
	
	<form>
	
		<ion-item>
			<ion-label floating>Business Name</ion-label>
			<ion-input type="text" id="business_name" name="business_name" [(ngModel)]="business.business_name"></ion-input>
		</ion-item>
	
		<ion-item>
			<ion-label floating>Business PAN</ion-label>
			<ion-input type="text" id="pan" name="pan" [(ngModel)]="business.pan"></ion-input>
		</ion-item>
	
		<ion-item>
			<ion-label floating>Primary Contact Person</ion-label>
			<ion-input type="text" id="primary_contact_person" name="primary_contact_person" [(ngModel)]="business.primary_contact_person"></ion-input>
		</ion-item>
	
		<ion-item>
			<ion-label floating>Primary Contact Phone</ion-label>
			<ion-input type="text" id="primary_contact_personph" name="primary_contact_personph" [(ngModel)]="business.primary_contact_personph"></ion-input>
		</ion-item>
		
		<ion-grid>
			<ion-row>
				<ion-col text-right>
					<button (click)="save_details('CA Firm')" ion-button color="secondary">
						Save Business
					</button>
				</ion-col>
			</ion-row>
		</ion-grid>
		
	</form>

</ion-content>
