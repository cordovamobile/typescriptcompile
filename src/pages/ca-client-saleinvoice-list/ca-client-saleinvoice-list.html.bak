<ion-header>
	<ion-navbar>
		<button ion-button menuToggle>
			<ion-icon name="menu"></ion-icon>
		</button>
		<ion-title>{{client.business_name}} Sales Invoice</ion-title>
	</ion-navbar>
	<div class="tabs_navbar">
		<ion-grid>
			<ion-row>
				<ion-col text-center class="active">
					Sales
				</ion-col>
				<ion-col text-center (click)="openPage('CaClientItemListPage')">
					Items
				</ion-col>
				<ion-col text-center (click)="openPage('CaClientContactListPage')">
					Clients
				</ion-col>
			</ion-row>
		</ion-grid>
	</div>
</ion-header>


<ion-content padding>
	
	<ion-fab bottom right>
		<button ion-fab color="danger" (click)="open_saleinvoice_add_page()">
			<ion-icon name="add"></ion-icon>
		</button>
	</ion-fab>
	
	<!--ion-card>

		<ion-card-content>
			
			<button (click)="open_saleinvoice_add_page()" ion-button color="danger" small>
				<ion-icon name="add"></ion-icon>
				&nbsp;
				Add Contact
			</button>
			
		</ion-card-content>

	</ion-card-->
	
	<ion-list>
		
		<ion-card *ngFor="let i of saleinvoices" class="border-left">
			<ion-card-content>
				{{i.customer_billing_name}}vxcv
				<a (click)="edit_saleinvoice(i)" style="float: right;">
					<ion-icon name="create"></ion-icon>
					Edit
				</a>
			</ion-card-content>
		</ion-card>
	
	</ion-list>
	
</ion-content>
