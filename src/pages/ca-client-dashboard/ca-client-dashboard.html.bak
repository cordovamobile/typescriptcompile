<ion-header>
	<ion-navbar>
		<button ion-button menuToggle>
			<ion-icon name="menu"></ion-icon>
		</button>
		<ion-title>{{client.business_name}} Dashboard</ion-title>
	</ion-navbar>
	<div class="tabs_navbar">
		<ion-grid>
			<ion-row>
				<ion-col text-center>
					Sales
				</ion-col>
				<ion-col text-center (click)="openPage('CaClientItemListPage')">
					Items
				</ion-col>
				<ion-col text-center (click)="openPage('CaClientItemListPage')">
					Clients
				</ion-col>
			</ion-row>
		</ion-grid>
	</div>
</ion-header>


<ion-content padding>
	
	
	<ion-card>

		<ion-card-header>
			Business Details
		</ion-card-header>

		<ion-card-content text-center>
			<p>Client's Business Name: {{client.business_name}}</p>
			<p>Client's PAN: {{client.pan}}</p>
			<p>Client's Name: {{client.primary_contact_person}}</p>
			<p>Email Address: {{client.email_address}}</p>
			<p>Phone Number: {{client.primary_contact_personph}}</p>
			<div>
				GSTINs:-
				<div *ngFor="let g of client.data">{{g.gstin}} ({{g.gstin_name}})</div>
			</div>
			
		</ion-card-content>

	</ion-card>
	
	
	<ion-card>

		<ion-card-header>
			Actions
		</ion-card-header>

		<ion-card-content text-center>
			
			<div style="padding: 10px;">
				
				<button (click)="openPage('CaClientEditPage')" ion-button color="light" small>
					<ion-icon name="create"></ion-icon>
					&nbsp;
					Edit Client Details
				</button>
				
			</div>
			
			<div style="padding: 10px;">
				
				<button (click)="openPage('CaClientGstinAddPage')" ion-button color="light" small>
					<ion-icon name="create"></ion-icon>
					&nbsp;
					Add New GSTIN
				</button>
				
			</div>
			
			<div style="padding: 10px;">
				
				<button (click)="openPage('CaClientGstinListPage')" ion-button color="light" small>
					<ion-icon name="create"></ion-icon>
					&nbsp;
					GSTINs List
				</button>
				
			</div>
			
			<div style="padding: 10px;">
				
				<button (click)="openPage('CaClientItemListPage')" ion-button color="light" small>
					<ion-icon name="create"></ion-icon>
					&nbsp;
					Items List
				</button>
				
			</div>
			
			<div style="padding: 10px;">
				
				<button (click)="openPage('CaClientContactListPage')" ion-button color="light" small>
					<ion-icon name="create"></ion-icon>
					&nbsp;
					Contacts
				</button>
				
			</div>
			
			<div style="padding: 10px;">
				
				<button (click)="openPage('CaClientSaleinvoiceListPage')" ion-button color="light" small>
					<ion-icon name="create"></ion-icon>
					&nbsp;
					Sales Invoices
				</button>
				
			</div>
			
			<!--div style="padding: 10px;">
				
				<button (click)="openPage('')" ion-button color="light" small>
					<ion-icon name="cart"></ion-icon>
					&nbsp;
					Create Sales Invoice
				</button>
				
			</div>
			
			<div style="padding: 10px;">
				
				<button (click)="openPage('')" ion-button color="light" small>
					<ion-icon name="cash"></ion-icon>
					&nbsp;
					Create Purchase Invoice
				</button>
				
			</div-->
			
		</ion-card-content>

	</ion-card>
	
	
</ion-content>
