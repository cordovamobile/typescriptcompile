<ion-header>
	<ion-navbar>
		<button ion-button menuToggle>
			<ion-icon name="menu"></ion-icon>
		</button>
		<ion-title>OC Dashboard</ion-title>
	</ion-navbar>
</ion-header>


<ion-content padding>
	
	
	
	<ion-card>

		<ion-card-header>
			Welcome to {{application_service.userdata.full_name}}'s Dashboard.
		</ion-card-header>

		<ion-card-content>
			
			<button (click)="open_client_add_page()" ion-button color="danger" small>
				<ion-icon name="add"></ion-icon>
				&nbsp;
				Add Business
			</button>
			
		</ion-card-content>

	</ion-card>
	
	
		
	<ion-card>

		<ion-card-header>
			My Businesses
		</ion-card-header>

		<ion-card-content>
			
			<div *ngFor="let c of businesss" style="border-bottom: 1px rgba(0,0,0,.15) solid;">
				<ion-row class="vertical-center">
					<ion-col text-left>
						{{c.business_name}}
					</ion-col>
					<ion-col text-right>
						<button (click)="open_business_dashboard_page(c)" ion-button color="danger" small>
							Dashboard
							&nbsp;
							<ion-icon name="arrow-dropright"></ion-icon>
						</button>
					</ion-col>
				</ion-row>
			</div>
			
		</ion-card-content>

	</ion-card>
	
	
	
</ion-content>
