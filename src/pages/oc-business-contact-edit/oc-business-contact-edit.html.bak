<ion-header>
	<ion-navbar>
		<button ion-button menuToggle>
			<ion-icon name="menu"></ion-icon>
		</button>
		<ion-title>{{business.business_name}} Contacts</ion-title>
	</ion-navbar>
	<div class="tabs_navbar">
		<ion-grid>
			<ion-row>
				<ion-col text-center (click)="openPage('OcBusinessSaleinvoiceListPage')">
					Sales
				</ion-col>
				<ion-col text-center (click)="openPage('OcBusinessItemListPage')">
					Items
				</ion-col>
				<ion-col text-center class="active">
					Clients
				</ion-col>
			</ion-row>
		</ion-grid>
	</div>
</ion-header>


<ion-content padding>
	
	<ion-fab bottom right>
		<button ion-fab color="danger" (click)="open_contact_add_page()">
			<ion-icon name="add"></ion-icon>
		</button>
	</ion-fab>
	
	<!--ion-card>

		<ion-card-content>
			
			<button (click)="open_contact_add_page()" ion-button color="danger" small>
				<ion-icon name="add"></ion-icon>
				&nbsp;
				Add Contact
			</button>
			
		</ion-card-content>

	</ion-card-->
	
	<ion-list>
		
		<ion-card *ngFor="let i of contacts" class="border-left">
			<ion-card-content>
				{{i.name}}
				<a (click)="delete_contact(i,n)" style="float: right;">
					<ion-icon name="trash"></ion-icon>
					Delete
				</a>
				<a (click)="edit_contact(i)" style="float: right; padding-right: 20px;">
					<ion-icon name="create"></ion-icon>
					Edit
				</a>
			</ion-card-content>
		</ion-card>
	
	</ion-list>
	
</ion-content>
