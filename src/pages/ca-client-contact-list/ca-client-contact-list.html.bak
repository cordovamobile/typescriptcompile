<ion-header>
	<ion-navbar>
		<button ion-button menuToggle>
			<ion-icon name="menu"></ion-icon>
		</button>
		<ion-title>{{client.business_name}} Contacts</ion-title>
	</ion-navbar>
	<div class="tabs_navbar">
		<ion-grid>
			<ion-row>
				<ion-col text-center (click)="openPage('CaClientSaleinvoiceListPage')">
					Sales
				</ion-col>
				<ion-col text-center (click)="openPage('CaClientItemListPage')">
					Items
				</ion-col>
				<ion-col text-center (click)="">
					Clients
				</ion-col>
			</ion-row>
		</ion-grid>
	</div>
</ion-header>


<ion-content padding>
	
	
	
	<ion-card>

		<ion-card-content>
			
			<button (click)="open_contact_add_page()" ion-button color="danger" small>
				<ion-icon name="add"></ion-icon>
				&nbsp;
				Add Contact
			</button>
			
		</ion-card-content>

	</ion-card>
	
	<ion-list>
		
		<ion-item *ngFor="let i of contacts">
			{{i.name}}
			<a (click)="edit_contact(i)" style="float: right;">
				<ion-icon name="create"></ion-icon>
				Edit
			</a>
		</ion-item>
	
	</ion-list>
	
</ion-content>
