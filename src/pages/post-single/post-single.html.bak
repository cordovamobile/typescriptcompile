<ion-header>
	<ion-navbar>
		<button ion-button menuToggle>
			<ion-icon name="menu"></ion-icon>
		</button>
		<ion-title>Post : {{post.title.rendered}}</ion-title>
	</ion-navbar>
</ion-header>


<ion-content padding>
		
	<div *ngIf="loading_post">
		
		<h6 text-center>
			Loading 
			<ion-icon name="refresh" class="ion-spin-animation"></ion-icon>
		</h6>
		
	</div>
	
	<ion-grid>
		<ion-row>
			<ion-col>
				<h3 [innerHtml]="post.title.rendered" text-center></h3>
				<h3 class="img-responsive-container" text-center>
					<img src="{{ post.better_featured_image.media_details.sizes.thumbnail.source_url }}" *ngIf="post.better_featured_image" />
				</h3>
			</ion-col>
		</ion-row>
		<ion-row>
			<ion-col>
				<p [innerHtml]="post.content.rendered" class="img-responsive-container" text-justify></p>
			</ion-col>
		</ion-row>
	</ion-grid>
	
	<hr />
	
