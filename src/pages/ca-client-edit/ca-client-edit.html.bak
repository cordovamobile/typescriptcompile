<ion-header>
	<ion-navbar>
		<button ion-button menuToggle>
			<ion-icon name="menu"></ion-icon>
		</button>
		<ion-title>{{client.business_name}} Edit</ion-title>
	</ion-navbar>
</ion-header>


<ion-content padding>
	
	
	<ion-grid>
		
		<ion-row>
			<ion-col>
				<h5>Enter client details:</h5>
			</ion-col>
		</ion-row>
	
	</ion-grid>
	
	
	
	<div>
	
		<ion-item>
			<ion-label floating>Client's Business Name</ion-label>
			<ion-input type="text" id="business_name" name="business_name" [(ngModel)]="client.business_name"></ion-input>
		</ion-item>
	
		<ion-item>
			<ion-label floating>Client's PAN</ion-label>
			<ion-input type="text" id="pan" name="pan" [(ngModel)]="client.pan"></ion-input>
		</ion-item>
	
		<ion-item>
			<ion-label floating>Client's Name</ion-label>
			<ion-input type="text" id="pan" name="pan" [(ngModel)]="client.primary_contact_person"></ion-input>
		</ion-item>
	
		<ion-item>
			<ion-label floating>Email Address</ion-label>
			<ion-input type="text" id="pan" name="pan" [(ngModel)]="client.email_address"></ion-input>
		</ion-item>
	
		<ion-item>
			<ion-label floating>Phone Number</ion-label>
			<ion-input type="text" id="pan" name="pan" [(ngModel)]="client.primary_contact_personph"></ion-input>
		</ion-item>
		
