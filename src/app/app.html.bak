<ion-menu [content]="content">
	
	<ion-header>
		
		<ion-toolbar style="color: #fff;">
			
			<ion-grid *ngIf="logged_in">
				<ion-row>
					<ion-col col-3>
						<ion-avatar item-start>
							<img src="assets/imgs/menu/avatar.png" style="width: 50px; height: auto;">
						</ion-avatar>
					</ion-col>
					<ion-col col-9 text-left>
						<h6 style="font-weight: normal;">{{applicationservice.userdata.full_name}}</h6>
						<ion-select 
							[(ngModel)]="applicationservice.current_client_or_business" 
							interface="popover"
							class="current_client_or_business"
							style="
							"	(ionChange)="current_client_or_business_changed(applicationservice.current_client_or_business)"
							placeholder="Select Business"
							menuClose
						>
							<ion-option *ngFor="let c of applicationservice.clients_or_businesses"
								[value]="c"
							>
								{{ c.business_name }}
							</ion-option>
						</ion-select>
					</ion-col>
				</ion-row>
			</ion-grid>
			
			
		</ion-toolbar>
		
		<h5
			[class.hide]="!logged_in"
			text-center
		>
			Logged in as <b>{{applicationservice.userdata.full_name}}</b>.
		</h5>
		
	</ion-header>
	
	<ion-content>
	
	
	
	
		<ion-list class="primary_menu">
		
			<div><!-- HomePage Page -->
			
				<a 
					class="home_menu" 
					menuClose 
					ion-item 
					(click)="openComponent('HomePage')"
				>
					<span class="menu_item_icon">
						<!--img src="assets/imgs/menu/icons/home.png" /-->
						<ion-icon name="home"></ion-icon>
					</span>
					<span class="menu_item_title">
						Home
					</span>
				</a>
				
			</div>
			
			
			<!-- HomePage Page -->
			<!--div>
			
				<a 
					[class.hide]="!logged_in"
					class="home_menu" 
					menuClose 
					ion-item 
					(click)="openComponent('UserDetailsSavePage')"
				>
					<span class="menu_item_icon">
						<ion-icon ios="ios-person" md="md-person"></ion-icon>
					</span>
					<span class="menu_item_title">
						Update User Details
					</span>
				</a>
				
			</div-->
			
			
			
			
			
			
			
			
			
			
		
			<div><!-- HomePage Page -->
			
				<a 
					[class.hide]="!logged_in"
					class="home_menu" 
					menuClose 
					ion-item 
					(click)="openDashboard()"
				>
					<span class="menu_item_icon">
						<ion-icon name="apps"></ion-icon>
					</span>
					<span class="menu_item_title">
						Dashboard
					</span>
				</a>
				
			</div>
		
			<div><!-- HomePage Page -->
			
				<a 
					[class.hide]="!logged_in"
					class="home_menu" 
					menuClose 
					ion-item 
				>
					<span class="menu_item_icon">
						<ion-icon name="cart"></ion-icon>
					</span>
					<span class="menu_item_title">
						Sales
					</span>
				</a>
				
			</div>
		
			<div><!-- HomePage Page -->
			
				<a 
					[class.hide]="!logged_in"
					class="home_menu" 
					menuClose 
					ion-item 
				>
					<span class="menu_item_icon">
						<ion-icon name="cash"></ion-icon>
					</span>
					<span class="menu_item_title">
						Purchase
					</span>
				</a>
				
			</div>
		
			<div><!-- HomePage Page -->
			
				<a 
					[class.hide]="!logged_in"
					class="home_menu" 
					menuClose 
					ion-item 
				>
					<span class="menu_item_icon">
						<ion-icon name="list-box"></ion-icon>
					</span>
					<span class="menu_item_title">
						Items
					</span>
				</a>
				
			</div>
		
			<div><!-- HomePage Page -->
			
				<a 
					[class.hide]="!logged_in"
					class="home_menu" 
					menuClose 
					ion-item 
				>
					<span class="menu_item_icon">
						<ion-icon name="contacts"></ion-icon>
					</span>
					<span class="menu_item_title">
						Contacts
					</span>
				</a>
				
			</div>
			
			
			
			
		
			<div><!-- Login Page -->
			
				<a 
					[class.hide]="logged_in"
					class="" 
					menuClose 
					ion-item 
					(click)="openComponent('LoginPage')"
				>
					<span class="menu_item_icon">
						<ion-icon name="log-in"></ion-icon>
					</span>
					<span class="menu_item_title">
						Log In
					</span>
				</a>
				
			</div>
		
			<div><!-- Log Out Page -->
			
				<a 
					[class.hide]="!logged_in"
					class="" 
					menuClose 
					ion-item 
					(click)="logout()"
				>
					<span class="menu_item_icon">
						<ion-icon name="log-out"></ion-icon>
					</span>
					<span class="menu_item_title">
						Log Out
					</span>
				</a>
				
			</div>
			
			
			
			
			
			
			
			
			
			
			
			
			
		
		
		
			
			
			
			<!--button menuClose ion-item *ngFor="let p of pages" (click)="openPage(p)">
			{{p.title}}
			</button-->
			
			
			
			
		</ion-list>
		
		
		
		
	</ion-content>

</ion-menu>

<!-- Disable swipe-to-go-back because it's poor UX to combine STGB with side menus -->
<ion-nav [root]="rootPage" #content swipeBackEnabled="false"></ion-nav>